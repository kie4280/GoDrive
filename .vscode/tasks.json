{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug-headless",
            "type": "shell",
            "command": "$SHELL --init-file scripts/debug.sh",
            "isBackground": true,
            "problemMatcher": {
                "owner": "go",
                "applyTo": "allDocuments",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": ".*",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "beginsPattern": "start debug server",
                    "endsPattern": "API server listening"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "stop-debug",
            "type": "shell",
            "command": "scripts/stop_dlv.sh",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}